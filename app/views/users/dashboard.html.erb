                        <a href="<%= messages_path%>?mtype=connections"><%= image_tag("box-edit.png") %></a>


                      </div>
                    </div>


                  </div>
                </div>
              </div>
              <div class="col-md-1 col-sm-1"> </div>
            </div>
          </div>
        </div>
      </div>

