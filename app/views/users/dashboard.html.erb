                        <% else %>
                            <%= image_tag("tx_xras.png") %>
                        <% end %>
                      </a>
                    </p>

                  </div>
                </div>
                <div class="tx_profile_section">
                  <div class="col-md-12 col-sm-12">
                    <h1 class="profile_hadding">Backend Status</h1>
                    <a href="#!" class="tx_edit_btn">Edit Profile</a> </div>
