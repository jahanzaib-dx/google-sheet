<div id="activity_page_options">

<div class="modal fade" id="Modaloptions1" tabindex="-1" role="dialog" aria-labelledby="Modallease" aria-hidden="true">
  <div class="modal-dialog  tx_invite_modal-dialog">
    <div class="modal-content">
      <%= form_tag do %>
          <div class="modal-header  tx_invite_modal-header">
            <button type="button" class="close tx_close" data-dismiss="modal" aria-hidden="true"><%= image_tag("xras-icon.png") %></button>
            <h4 class="modal-title" id="myModalLabel">Change Comp Status</h4>
          </div>
          <div class="modal-body tx_invite_modal-body ">
          	
            <div class="round_lock">
					<ul class="tx_lock_list" style="padding-left: 5%">
						<li>
							<a href="#!" data-action="<%= relock_comp_path%>" title="Relock" class="btn-comp-request-status lock-img change-status "><%= image_tag("lock.png")%> </a>
						</li>
						<li>
							<a href="#!" data-status="Unlock" data-toggle="modal" data-target="#Modalfull" data-tooltip="tooltip" title="Click to see full transparency options" class="btn-comp-request-status change-status" ><%= image_tag("lock-un.png")%></a>
						</li>
						<li>
							<a href="#!" data-status="Lock" data-toggle="modal" data-target="#Modalpartial" data-tooltip="tooltip" title="Click to see custom transparency options" class="btn-comp-request-status partail-img change-status"><%= image_tag("lock-b.png")%></a>
						</li>
						<!-- <li>
							<a href="#!" class="btn-comp-request-status change-status " ><%= image_tag("lock-un.png")%> </a>
						</li> -->
					</ul>
			</div>

          </div>

          <div class="modal-footer text-center">

            <button type="button" class="btn btn-primary invite_save" id="update_permission">Save</button>
                        
          </div>
      <% end %>

    </div>
  </div>
</div>

