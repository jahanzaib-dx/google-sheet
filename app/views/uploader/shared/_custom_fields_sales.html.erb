
<div class="large-12 columns custom-fields-table-container">
  <h5>Custom Data</h5>
  <table id="custom-fields-table" class="">
    <thead>
      <tr>
        <th>Field</th>
        <th>Value</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="3" class="add-custom-data-single-comp-td">
            <button class="add-custom-data-single-comp">+Add Custom Data Row</button>
        </td>
      </tr>
    </tfoot>
  </table>
</div>

<script type="text/template" id="custom-field-row-tmpl">
  <tr>
    <td>
      <%= text_field :custom, "{{row}}", name: "sale_record[custom][{{row}}][key]" %>
    </td>
    <td>
      <%= text_field :custom, "{{row}}", name: "sale_record[custom][{{row}}][value]" %>
    </td>
    <td class="actions">
      <a href="#" type="button" class='btn btn-red delete-custom-field'><u><span>Delete</span></u></a>
    </td>
  </tr>
</script>
