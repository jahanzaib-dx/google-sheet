
<div class="large-12 columns custom-fields-table-container">
  <h5>Custom Data</h5>
  <table id="custom-fields-table" class="">
    <thead>
      <tr>
        <th>Field</th>
        <th>Value</th>
        <th>&nbsp;</th>
      </tr>
    </thead>
    <tbody>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="3" class="add-custom-data-single-comp-td3">
            <button class="add-custom-data-single-comp3">+Add Custom Data Row</button>
        </td>
      </tr>
    </tfoot>
  </table>
</div>

<script type="text/template" id="custom-field-row-tmpl-3">
  <tr>
    <td>
      <%= text_field :custom, "{{row}}", name: "custom_record[custom][{{row}}][key]",  :class =>'validate[required]'  %>
    </td>
    <td>
      <%= text_field :custom, "{{row}}", name: "custom_record[custom][{{row}}][value]"  %>
    </td>
    <td class="actions">
      <a href="#" type="button" class='btn btn-red delete-custom-field'><u><span>Delete</span></u></a>
    </td>
  </tr>
</script>
